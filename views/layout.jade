!!! 5
html
  head
    meta(charset='utf-8')
    meta(name='robots', content='index')
    block moreStyles
    link(rel='stylesheet', href='//fonts.googleapis.com/css?Open+Sans')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/site.css')
    title= pageTitle
  body
    .container
      #menu.navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container
            a.brand(href='/') My2Cents
            if session.user
              ul.nav
                li
                  a(href='/dashboard', title="Dashboard", class="dashboard") Dashboard
                li
                  a(href='/campaign', title="Dashboard", class="dashboard") Campaigns
                li
                  a(href='/user', title="Dashboard", class="dashboard") Users

      #main
        .col-inner.clearfix

          .page-header
              block title
                h1.title Page Title

          include includes/flashes

          block content

    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    block moreScripts