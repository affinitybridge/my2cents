extends campaign_layout

block content
  div.page-header
    .inner
      h2.title #{campaign.title}
      p #{campaign.desc}
  #representatives
    .inner
  #phonescript
    .inner
      p #{campaign.script}
      button.hangup.ui-button.ui-state-default.ui-button-text-only.ui-corner-all.ui-widget
        span.ui-button-text Hangup
  if process.env.DEBUG === 'true'
    #log
      h3 Event Log
  #footer
    .inner
      p Developed by Affinity Bridge